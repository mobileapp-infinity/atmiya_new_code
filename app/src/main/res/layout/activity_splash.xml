<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".login.activity.SplashActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/erp_atmiya_new_bg_splash"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_splash_footer"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp">

            <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design &amp; Developed by:    "
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="164dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_new_iipl_logo"/>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>