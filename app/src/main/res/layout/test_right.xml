<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    style="@style/SwipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:sticky="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg_color">

        <TextView
            android:id="@+id/text_view_pos"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="#1" />

        <TextView
            style="@style/CenterTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Only Right" />

    </LinearLayout>

    <!--RIGHT-->
    <LinearLayout
        android:id="@+id/right_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"

        android:gravity="right"
        >

        <TextView
            style="@style/RightTextView"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="#1000"
            android:text="sticky=170dp" />

        <TextView
            style="@style/RightTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="bring_to_clamp=200dp; clamp=self; width=match_parent" />


    </LinearLayout>
</ru.rambler.libs.swipe_layout.SwipeLayout>