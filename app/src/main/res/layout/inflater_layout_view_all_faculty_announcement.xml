<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                    android:id="@+id/tvNewNotificationVisibleView"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="6dp"
                    android:visibility="invisible"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_new_notification"/>


                <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                    android:id="@+id/tvNotificationTitle"
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="wrap_content"
                    android:text="Testing Title"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />

                <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                    android:id="@+id/tvNotificationDate"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/color_primary_with_75_opacity"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                    android:id="@+id/tvNewNotificationInVisibleView"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginRight="6dp"
                    android:visibility="invisible"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_new_notification"/>

                <com.infinity.infoway.atmiya.custom_class.TextViewRegularFont
                    android:id="@+id/tvNotificationDesc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="-"
                    android:textColor="@color/color_primary_with_90_opacity"
                    android:textSize="11sp"
                    app:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgDownloadAttachFileStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_attach_file"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_bg_color" />


</LinearLayout>